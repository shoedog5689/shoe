<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#4c000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <doctor.fresh.com.freshdoctor.view.CircleImageView
            android:id="@+id/circle_iv"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="@dimen/common_margin_top_bottom"
            android:src="@drawable/login_image"/>

        <android.support.design.widget.TextInputEditText
            android:id="@+id/user_name_dt"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:inputType="phone"
            android:hint="@string/login_user_name_phone_number"
            android:layout_marginTop="@dimen/login_margin_2_image"
            android:layout_marginLeft="@dimen/common_margin_left_right"
            android:layout_marginRight="@dimen/common_margin_left_right"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="@dimen/login_margin_2_image"
            android:layout_marginLeft="@dimen/common_margin_left_right"
            android:layout_marginRight="@dimen/common_margin_left_right">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/password_et"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:inputType="number"
                android:hint="@string/login_password" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/verify_code_btn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/login_send_verify_code"
                android:layout_weight="1"/>

        </LinearLayout>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/login_btn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="登陆"
            android:theme="@style/MyButton"
            android:layout_marginTop="@dimen/login_margin_2_image"
            android:layout_marginLeft="@dimen/common_margin_left_right"
            android:layout_marginRight="@dimen/common_margin_left_right"/>

    </LinearLayout>

</ScrollView>